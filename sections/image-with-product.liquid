<div class="custom_iwp_main">
  <div class="page-width">
    <div class="custom_iwp_rw">
      {% if section.settings.main-img != blank %}
      <div class="custom_iwp_image">
        <img src="{{ section.settings.main-img | img_url: "master" }}" alt="" width="" height="" loading="lazy">
      </div>
      {% endif %}
      <div class="custom_iwp_col">
        <div class="custom_iwp_card">
          <div class="custom_iwp_head">
            <h2>{{ section.settings.heading }}</h2>
            <p>{{ section.settings.description }}</p>
          </div>
          <div class="custom_iwp_products">
           {% assign product = all_products[section.settings.pr_collection] %}
            {{ product.id }}
            <div class="custom_iwp_product">
              <div class="cstm_product_card">
                {% if product.featured_image != blank %}
                <div class="cstm_product_image">
                  <img src="{{ product.featured_image | img_url: "master" }}" alt="" width="" height="" loading="lazy">
                </div>
                {% endif %}
                <div class="cstm_product_text">
                  <h2>{{ product.title }}</h2>
                  <p class="reg_pr">{{ product.price | money }}</p>
                </div>
              </div>
            </div>
          {% assign pro = all_products[section.settings.pr_collection1] %}
          <div class="custom_iwp_product">
              <div class="cstm_product_card">
                {% if product.featured_image != blank %}
                <div class="cstm_product_image">
                  <img src="{{ product.featured_image | img_url: "master" }}" alt="" width="" height="" loading="lazy">
                </div>
                {% endif %}
                <div class="cstm_product_text">
                  <h2>{{ product.title }}</h2>
                  <p class="reg_pr">{{ product.price | money }}</p>
                </div>
              </div>
            </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

<style>

.custom_iwp_main{
  padding: 50px 0;
  display: block;
}

  .custom_iwp_rw{
    display: flex;
    width: 100%;
    align-items: center;
  }

  .custom_iwp_image{
    width: 50%;
    display: block;
  }

  .custom_iwp_image img{
    width: 100%;
    max-width: 100%;
    display: block;
    object-fit: cover;
  }

  .custom_iwp_col{
    width: 50%;
    display: block;
    padding: 50px;
  }

  .custom_iwp_card{
    display: block;
  }

  .custom_iwp_head {
    display: block;
    text-align: center;
  }
  
  .custom_iwp_head h2{
    font-size: 16px;
    color: #000;
    font-weight: 600;
  }

  .custom_iwp_head p{
    font-size: 14px;
    color: #000;
    font-weight: 400;
  }

  .custom_iwp_products{
     display: flex;
     width: 100%;
     align-items: center;
     gap: 20px;
  }

  .custom_iwp_product{
    width: 50%;
    display: block;
  }

  .cstm_product_image{
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cstm_product_text h2{
    font-size: 16px;
    line-height: 1.5;
    color: #000;
    font-weight: 600;
  }

  
  .cstm_product_text .reg_pr{
    font-size: 14px;
    line-height: 1.5;
    color: #000;
    font-weight: 400;
  }

  @media (max-width: 767px){

      .custom_iwp_rw{   
        flex-wrap: wrap;
      }

    .custom_iwp_image{
      width: 100%
    }

    .custom_iwp_col{
      padding: 15px;
      width: 100%;
    }

    .custom_iwp_products{
      flex-wrap: wrap;
    }

    .custom_iwp_products{
      width: 100%;
      margin-bottom: 20px;
    }    
  
  }
  
</style>



{% schema %}
  {
    "name": "Image With Product",
    "settings": [
      {
        "type":"image_picker",
        "id":"main-img",
        "label":"Main Image"
      },
      {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type":"textarea",
        "id":"description",
        "label":"Description"
      },
       {
      "type":"product",
      "id": "pr_collection",
      "label": "product"
      },
      {
      "type":"product",
      "id": "pr_collection1",
      "label": "product"
      }
    ],
    "presets":[
      {
        "name":"Image With Products"
      }
    ]
  }
{% endschema %}