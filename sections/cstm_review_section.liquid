<style>
.pd_container {
    padding-top: 40px;
    padding-bottom: 40px;
}
.container.spacing-default {
    padding-left: 20px;
    padding-right: 20px;
}
.main_flex {
    display: flex;
    align-items: start;
    justify-content: space-between;
  gap:10px;
}
.rv_flex {
    width: 30%;
}
.rv_heading h2 {
    font-size: 4.5rem;
    font-weight: 600;
  margin: 0;
   line-height: 135%;
}
.rv_main {
    width: 65%;
}
.first_flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
} 
.rv_min {
    min-height: 60px;
}  
.rv_tick {
    display: flex;
    align-items: center;
    gap: 3px;
}  
.rv_block {
    width: 100%;
    padding: 20px;
    background: #f7f5f4;
    margin-right: 10px;
    border-radius: 20px;
}

button.slick-prev.slick-arrow.slick-disabled {
    display: none !important;
}
  
button.slick-next.slick-arrow {
    display: none !important;
}
  
button#slick-slide-control00 {
    background: transparent;
    border: 0;
    font-size: 20px;
}
button#slick-slide-control01 {
    background: transparent;
    border: 0;
    font-size: 20px;
}  

ul.slick-dots{
  display: flex;
  align-item: center;
  gap: 10px;
  list-style: none;
}  

@media (max-width: 992px) {
 .main_flex {
    flex-direction: column;
}
  .rv_flex {
    width: 100%;
    text-align: center;
}
  .rv_heading h2 {
    font-size: 2.5rem;
  }
  .rv_main {
    width: 100%;
}
}

</style>

<script>
  $('.rv_slide').slick({
  dots: true,
  infinite: false,
  arrows: false,  
  speed: 300,
  slidesToShow: 2,
  slidesToScroll: 2,
  responsive: [
    {
      breakpoint: 992,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
</script>
{% schema %}
  {
    "name": "Review Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Review Block",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "text",
            "id": "cmnt",
            "label": "Comment"
          },
          {
            "type": "text",
            "id": "date",
            "label": "Date"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Review Section"
      }
    ]
  }
{% endschema %}